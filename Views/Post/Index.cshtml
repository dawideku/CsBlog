@model List<Post>

<h2>Wpisy na blogu</h2>
<a href="/Post/Dodaj">+ Nowy post</a>

@foreach (var post in Model)
{
    <div style="margin-bottom: 20px;">
        <h3>@post.Tytul</h3>
        <p>@post.Tresc.Substring(0, Math.Min(100, post.Tresc.Length))...</p>
        <p><a href="@Url.Action("Szczegoly", new { id = post.Id })">Czytaj dalej</a></p>
        <p><a href="@Url.Action("Edytuj", "Post", new { id = post.Id })">Edytuj</a></p>
        <p><a href="@Url.Action("Usun", "Post", new { id = post.Id })">Usuń</a></p>
    </div>
}
